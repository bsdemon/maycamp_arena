<h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :login, 'Потребителско име:' %>
    <%= f.text_field :login %><br/>
    <em>С това име ще влизате в системата</em>
  </div>
  <br />

  <div class="field">
    <%= f.label :name, 'Истинско име:' %>
    <%= f.text_field :name %><br />
    <em>Това име ще се появява в класиранията на състезанията</em>
  </div>
  <br />

  <div class="field">
     <%= f.label :city, 'Град:' %>
    <%= f.collection_select :city, BG_CITIES, :to_s, :to_s, :include_blank => "Моля изберете" %>
  </div>
  <br />

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <br />

  <div class="field">
    <%= f.label :unencrypted_password %>
    <!-- <% if @minimum_password_length %> -->
    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
    <!-- <% end %><br /> -->
    <%= f.password_field :unencrypted_password, autocomplete: "off" %>
  </div>
  <br />

  <div class="field">
    <%= f.label :unencrypted_password_confirmation %>
    <%= f.password_field :unencrypted_password_confirmation, autocomplete: "off" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
